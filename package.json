{
  "name": "kioku",
  "displayName": "Kioku - Flashcard Learning",
  "description": "Powerful flashcard learning with spaced repetition, tags, search, and progress tracking",
  "version": "0.5.0",
  "publisher": "Justhiro55",
  "author": {
    "name": "Justhiro55"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Justhiro55/Kioku"
  },
  "bugs": {
    "url": "https://github.com/Justhiro55/Kioku/issues"
  },
  "homepage": "https://github.com/Justhiro55/Kioku#readme",
  "keywords": [
    "flashcard",
    "flashcards",
    "spaced repetition",
    "learning",
    "study",
    "memorization",
    "anki",
    "sm2",
    "education"
  ],
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Education",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kioku.addFromSelection",
        "title": "Kioku: Add from Selection"
      },
      {
        "command": "kioku.startReview",
        "title": "Kioku: Start Review"
      },
      {
        "command": "kioku.openDeck",
        "title": "Kioku: Open Deck"
      },
      {
        "command": "kioku.editCard",
        "title": "Kioku: Edit Card"
      },
      {
        "command": "kioku.deleteCard",
        "title": "Kioku: Delete Card"
      },
      {
        "command": "kioku.createDeck",
        "title": "Kioku: Create Deck"
      },
      {
        "command": "kioku.deleteDeck",
        "title": "Kioku: Delete Deck"
      },
      {
        "command": "kioku.exportCSV",
        "title": "Kioku: Export to CSV"
      },
      {
        "command": "kioku.importCSV",
        "title": "Kioku: Import from CSV"
      },
      {
        "command": "kioku.importJSON",
        "title": "Kioku: Import from JSON"
      },
      {
        "command": "kioku.exportJSON",
        "title": "Kioku: Export to JSON"
      },
      {
        "command": "kioku.createFromJSON",
        "title": "Kioku: Create Cards from Current JSON File"
      },
      {
        "command": "kioku.importMarkdown",
        "title": "Kioku: Import from Markdown"
      },
      {
        "command": "kioku.createFromMarkdown",
        "title": "Kioku: Create Cards from Current Markdown File"
      },
      {
        "command": "kioku.exportMarkdown",
        "title": "Kioku: Export to Markdown"
      },
      {
        "command": "kioku.importFromURL",
        "title": "Kioku: Import Deck from URL"
      },
      {
        "command": "kioku.shareDeck",
        "title": "Kioku: Share Deck (Copy to Clipboard)"
      },
      {
        "command": "kioku.searchCards",
        "title": "Kioku: Search Cards"
      },
      {
        "command": "kioku.filterByTag",
        "title": "Kioku: Filter by Tag"
      },
      {
        "command": "kioku.clearFilters",
        "title": "Kioku: Clear Filters"
      },
      {
        "command": "kioku.showStats",
        "title": "Kioku: Show Statistics"
      },
      {
        "command": "kioku.migrateToSQLite",
        "title": "Kioku: Migrate to SQLite"
      },
      {
        "command": "kioku.reviewDeck",
        "title": "Kioku: Review This Deck"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "kioku.reviewDeck",
          "when": "view == kioku-decks && viewItem == deck",
          "group": "navigation"
        },
        {
          "command": "kioku.editCard",
          "when": "view == kioku-decks && viewItem == card",
          "group": "inline"
        },
        {
          "command": "kioku.deleteCard",
          "when": "view == kioku-decks && viewItem == card",
          "group": "inline"
        },
        {
          "command": "kioku.deleteDeck",
          "when": "view == kioku-decks && viewItem == deck",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "kioku.startReview",
          "when": "view == kioku-decks",
          "group": "navigation@1"
        },
        {
          "command": "kioku.createDeck",
          "when": "view == kioku-decks",
          "group": "navigation@2"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kioku-sidebar",
          "title": "Kioku",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "kioku-sidebar": [
        {
          "id": "kioku-decks",
          "name": "Decks"
        }
      ]
    },
    "configuration": {
      "title": "Kioku",
      "properties": {
        "kioku.useWebview": {
          "type": "boolean",
          "default": true,
          "description": "Use webview UI for reviews (recommended)"
        },
        "kioku.reviewAlgorithm": {
          "type": "string",
          "enum": ["sm2", "basic"],
          "default": "sm2",
          "description": "Spaced repetition algorithm"
        },
        "kioku.storageType": {
          "type": "string",
          "enum": ["globalState", "sqlite"],
          "default": "globalState",
          "description": "Storage backend type"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@types/uuid": "^9.0.7",
    "@types/better-sqlite3": "^7.6.8",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "uuid": "^9.0.1",
    "better-sqlite3": "^9.2.2"
  }
}
